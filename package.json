{
  "name": "rollup-plugin-glsl-optimize",
  "version": "0.0.8",
  "description": "Import GLSL source files as strings. Pre-processed, validated and optimized with Khronos Group SPIRV-Tools.",
  "homepage": "https://github.com/docd27/rollup-plugin-glsl-optimize#readme",
  "keywords": [
    "rollup",
    "plugin",
    "glsl",
    "glslang",
    "webgl",
    "webgl2",
    "shader",
    "shaders",
    "optimize",
    "vert",
    "frag",
    "spirv",
    "spir-v"
  ],
  "author": "docd27",
  "repository": {
    "type": "git",
    "url": "https://github.com/docd27/rollup-plugin-glsl-optimize"
  },
  "bugs": {
    "url": "https://github.com/docd27/rollup-plugin-glsl-optimize/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "install": "node install.mjs",
    "lint": "eslint .",
    "gentypes": "tsc",
    "types": "npm run gentypes && npx rollup -c rollup.config.bundletypes.mjs",
    "bundle": "npx rollup -c rollup.config.package.mjs",
    "build": "rimraf ./dist && npm run types && npm run bundle",
    "test": "mocha test/dist.test.js",
    "testsrc": "mocha test/src.test.js",
    "coverage": "c8 --include 'src/**' --reporter=lcov mocha test/src.test.js",
    "cleanrelease": "npm uninstall glslify && rimraf bin && rimraf build && rimraf typings-autogen && rimraf coverage",
    "clean": "npm uninstall glslify && rimraf dist && rimraf bin && rimraf build && rimraf typings-autogen && rimraf coverage"
  },
  "installBinaries": {
    "url": "https://github.com/docd27/rollup-plugin-glsl-optimize/releases/download/",
    "tag": "b0.0.4"
  },
  "dependencies": {
    "@derhuerst/http-basic": "^8.2.1",
    "@rollup/pluginutils": "^4.1.0",
    "adm-zip": "^0.5.4",
    "env-paths": "^2.2.1",
    "https-proxy-agent": "^5.0.0",
    "magic-string": "^0.25.7",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/node": "^14.14.35",
    "c8": "^7.6.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "del": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.5",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^3.0.1",
    "typescript": "^4.2.3"
  }
}
